@model PruebaJR.Models.BookViewModelCreating

@{
    ViewData["Title"] = "Creating Book";
}


<h4>Creating a Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label class="form-label">Author</label>
                <select class="form-control" asp-for="AutorId" asp-items="@(new SelectList(ViewBag.Autors, "Id", "Name"))"></select>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
